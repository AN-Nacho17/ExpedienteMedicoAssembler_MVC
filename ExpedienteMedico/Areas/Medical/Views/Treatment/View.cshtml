@model List<Treatment>

<partial name="_Notifications"></partial> <!--Toaster notifications-->

<div class="container p-3">

    <div class="col-6 text-end p-1">
        <a asp-controller="Treatment" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Create new Treatment
        </a>
    </div>
    <br />
    <table id="tblDataTre" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Treatment Name</th>
                @*<th>Description</th>*@
                <th>Actions</th>
            </tr>
            <tr>
                <th>
                    @foreach (var treatment in Model)
                    {
                        <div class="col-lg-3 col-md-6">
                            <label>@treatment.Name</label>
                            <br>
                        </div>
                    }
                </th>
            </tr>
        </thead>
    </table>

</div>
