@using Microsoft.AspNetCore.Mvc.TagHelpers


@model MedicalHistory


<form method="post" asp-action="Upsert" enctype="multipart/form-data">

        <input asp-for="UserId" hidden />

        <div class="row">
            <div class="col-10">
                <div class="border p-3 mt-4 row">

                    <div class="col-12 pb-2">
                        <h2 class="text-primary">@(Model.UserId == null ? "Create" : "Update") Physician</h2><hr />
                    </div>

                    <div asp-validation-summary="All"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Treatments"></label>
                        <input asp-for="Treatments" class="form-control" />
                        <span asp-validation-for="Treatments" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Sufferings"></label>
                        <input asp-for="Sufferings" class="form-control" />
                        <span asp-validation-for="Sufferings" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Medicines"></label>
                        <input asp-for="Medicines" class="form-control" />
                        <span asp-validation-for="Medicines" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes"></label>
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Images"></label>
                        <input asp-for="Images" class="form-control" />
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>

                    <div>

