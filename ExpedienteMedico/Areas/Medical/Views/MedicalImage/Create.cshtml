@model MedicalImage

<form method="post">
    <h2 class="text-primary p-1">Add new medical image</h2>
    <div class="border p-2 mt-3">
        <div class="row pb-1"></div>

        <div class="mb-3 col-6">
            <label asp-for="ImageUrl"></label>
            <input id="uploadBox" type="file" name="file" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="col-2">
            <img src="~/@Model.ImageUrl" width="100%"
                 style="border-radius: 5px; border=1px solid #bbb9b9" />
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="MedicalImage" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

<script>
    function ValidateInput() {
        if (document.getElementById("uploadBox").value == "") {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Uploading an image is a requirement!'
            });
            return false;
        }
        return true;
    }

</script>
