@model Specialty

<form method="post">
    <h2 class="text-decoration p-1">Are you sure you want to delete this specialty?</h2>
    <div class="border p-2 mt-3">
        <div class="row pb-1"></div>
        
        <label class="m-1">Category Information</label>

        <div class="mb-1 form-control">
            <label asp-for="Name">Name: </label>
            <label>@Model.Name</label>
            <input asp-for="Name" class="form-control" readonly hidden>
        </div>
        
        <div class="mb-1 form-control">
            <label asp-for="Id">Id: </label>
            <label>@Model.Id</label>
            <input asp-for="Id" class="form-control" readonly hidden>
        </div>

        <button type="submit" class="btn btn-primary">Eliminar</button>

        <a asp-controller="Specialty" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>